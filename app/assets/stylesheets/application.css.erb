html, body {
 height: 100%;
}

nav {
  z-index: 3;
}

#map {
  position: absolute;
  top: 0px;
  left: 0px;
  width:100%;
  height: 100%;
  max-width: none;
  z-index: 1;
}

#coordinates {height: 500px; width: 500px; background-color: #000; color: #fff }

.map-thumb {
  max-width: 75px;
  width: 100%;
  height: auto;
}

#wrapper {
  background: url(<%= asset_data_uri "root-image.jpeg" %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  width: 100% !important;
  z-index: 0;
}

.no-decoration {
  list-style-type: none;
}


article {
  position:absolute;
  top:15px;
  right:0;
  bottom:0px;
  left:0;
  overflow:auto;
  z-index: 1;
}
.quiet {
  color:rgba(0,0,0,0.5);
}
.scroll {
  display:block;
  text-align:center;
}
.sections {
  background:rgba(255,255,255,0.5);
  width:240px;
}
article section {
  padding:20px;
  color:rgba(0,0,0,0.5);
  -webkit-transition:background 500ms, color 500ms;
  transition:background 500ms, color 500ms;
}
section.active {
  background:#fff;
  color:#404040;
}

#last-scroll {
  height: 2000px;
  background-color: none;
}

#new-report-form {
  position: absolute;
  left: 10px;
  background-color: #fff;
  z-index: 3;
}
